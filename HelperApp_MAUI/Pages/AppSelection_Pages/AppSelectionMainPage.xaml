<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HelperApp_MAUI.Pages.AppSelection_Pages.AppSelectionMainPage"
             NavigationPage.HasNavigationBar="False"
             Title="">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="120"/>
            <RowDefinition Height="120"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <BoxView Grid.ColumnSpan="3" Color="Green" />
        <Button Grid.Row="1" Grid.Column="0" Text="ToDo" Clicked="OnToDoSubAppClicked" Margin="5"/>
        <Button Grid.Row="1" Grid.Column="1" Text="Smart Home" Clicked="OnSmartHomeSubAppClicked" Margin="5"/>
        <Button Grid.Row="1" Grid.Column="2" Text="Fitness" Clicked="OnFitnessSubAppClicked" Margin="5"/>
        <Button Grid.Row="2" Grid.Column="0" Text="Plant Health" Clicked="OnPlantHealthSubAppClicked" Margin="5"/>
    </Grid>
    
</ContentPage>