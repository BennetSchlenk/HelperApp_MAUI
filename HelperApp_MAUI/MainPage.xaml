<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HelperApp_MAUI.MainPage"
             NavigationPage.HasNavigationBar="False"
             Title="">

    <Grid ColumnSpacing="5"
          RowSpacing="5" Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="120"/>
            <RowDefinition Height="120"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Button Text="ToDo" Clicked="OnToDoSubAppClicked"/>
        <Button Grid.Row="0" Grid.Column="1" Text="Smart Home" Clicked="OnToDoSubAppClicked"/>
        <Button Grid.Row="0" Grid.Column="2" Text="Fitness" Clicked="OnToDoSubAppClicked"/>
        <Button Grid.Row="1" Grid.Column="0" Text="Plant Health" Clicked="OnToDoSubAppClicked"/>
    </Grid>



</ContentPage>
